@using Home.Recipes.WebClient.Components.Buttons

<p>Are you sure you want to delete this?</p>

<button class="" @onclick="@(async () => await SubmitForm())">Delete</button>
<SecondaryButton @onclick="@(async () => await Cancel())">Cancel</SecondaryButton>

@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;

    private async Task SubmitForm() => await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    private async Task Cancel() => await BlazoredModal.CancelAsync();
}
