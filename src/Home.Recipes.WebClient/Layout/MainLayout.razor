@inherits LayoutComponentBase
@inject NavigationManager _navigationManager

<FluentLayout>
    <FluentHeader>
        <FluentStack>
            Home made recipes
            <FluentButton Appearance=Appearance.Stealth OnClick="@(_ => _navigationManager.NavigateTo("/"))">Home</FluentButton>
            <FluentButton Appearance=Appearance.Stealth OnClick="@(_ => _navigationManager.NavigateTo("/recipehistory"))">History</FluentButton>
        </FluentStack>
    </FluentHeader>
    <FluentBodyContent Class="px-10">
        @Body
    </FluentBodyContent>
</FluentLayout>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />
